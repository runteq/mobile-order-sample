<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold">注文一覧</h1>
</div>

<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: admin_orders_path, method: :get, class: "flex gap-4 items-end" do %>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">注文状況</label>
      <%= select_tag :status,
                     options_for_select([["すべて", ""]] + Order.statuses.keys.map { |s| [t("order.status.#{s}", default: s.capitalize), s] }, params[:status]),
                     class: "border border-gray-300 rounded-md p-2" %>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">日付</label>
      <%= date_field_tag :date, params[:date], class: "border border-gray-300 rounded-md p-2" %>
    </div>
    <%= submit_tag "絞り込み", class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600 cursor-pointer" %>
    <%= link_to "リセット", admin_orders_path, class: "text-gray-500 hover:text-gray-700 px-4 py-2" %>
  <% end %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">注文番号</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">お客様</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">注文状況</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">合計</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">商品数</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">注文日時</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @orders.each do |order| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap font-medium">#<%= order.id %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= order.user.display_name || "ユーザー" %></td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= render partial: "status_badge", locals: { status: order.status } %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap"><%= number_to_currency(order.total_price_yen, unit: "¥", precision: 0) %></td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= order.order_items.size %>点</td>
          <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "詳細", admin_order_path(order), class: "text-blue-600 hover:text-blue-900" %>
          </td>
        </tr>
      <% end %>

      <% if @orders.empty? %>
        <tr>
          <td colspan="7" class="px-6 py-8 text-center text-gray-500">注文がありません</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
